<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <solid android:color="#00ffffff" />
            <!--make button border solid color, nontransparent-->
            <stroke android:width="2dp" android:color="@color/accent" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!--button focused state background color-->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/iron" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!--button pressed state background color-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/iron" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>